{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:allow-app-read-recursive",
      "allow": [{ "path": "$APPDATA/**" }]
    },
    {
      "identifier": "fs:allow-app-write-recursive",
      "allow": [{ "path": "$APPDATA/**" }]
    },
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-read",
    "fs:allow-write",
    "dialog:default",
    "dialog:allow-save",
    "dialog:allow-open"
  ]
}
